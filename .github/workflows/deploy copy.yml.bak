name: Build and deploy to GitHub Pages

on:
  push:
    branches: [main]

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout ğŸ›ï¸
        uses: actions/checkout@v2.3.1

      - name: Install, lint, build ğŸ”§
        run: |
          npm install
          npm run lint:js
          npm run build
        env:
          BACK_URL: ${{ secrets.BACK_URL }}

      - name: Deploy ğŸš€
        uses: JamesIves/github-pages-deploy-action@4.1.0
        with:
          BACK_URL: ${{ secrets.BACK_URL }}
          branch: gh-pages
          folder: build
